                        --> 
                    </ul>
                </div>
            </article>
        </div>
    </div>
</footer>
{% block javascripts %}
    <script src="{{ asset('js/jquery-1.11.3.min.js')}}"></script>
    <script src="{{ asset('js/jquery.nivo.slider.pack.js')}}"></script>
    <script src="{{ asset('js/app.js')}}"></script>
    <script src="{{ asset('js/bootstrap.min.js')}}"></script>
 

{% endblock %}
</body>
</html>
